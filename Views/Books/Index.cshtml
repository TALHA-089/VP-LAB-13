@model IEnumerable<VPLab13.Models.Book>

@{
    ViewData["Title"] = "Books List";
}

<h2 class="mb-4">Books Collection</h2>

<form class="d-flex mb-4" method="get" asp-action="Index">
    <input class="form-control me-2" type="search" name="searchString" placeholder="Search by Title or Author" value="@Context.Request.Query["searchString"]" />
    <button class="btn btn-outline-primary" type="submit">Search</button>
</form>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@book.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@book.Author</h6>
                    <p class="card-text">Price: @book.Price.ToString("C")</p>
                    <p class="card-text">Published: @book.PublishedDate.ToShortDateString()</p>
                    <div class="mt-auto">
                        <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm me-2">Edit</a>
                        <form asp-action="Delete" asp-route-id="@book.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
